<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.3/socket.io.js" integrity="sha512-2RDFHqfLZW8IhPRvQYmK9bTLfj/hddxGXQAred2wNZGkrKQkLGj8RCkXfRJPHlDerdHHIzTFaahq4s/P4V6Qig==" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9c5910291f.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheet.css">
    <title>Document</title>
</head>
<body>

    <div class="container-fluid vh-100">
        <input type="text" value="<%=username%>" id="username" disabled="" style="display: none;">

        <!-- COMPLETE VIEW-->

        <div class="row">

            <!--ROOMS LIST (side bar) SECTION-->

            <div class="d-sm-block border-end col-8 col-sm-5 col-md-4 col-lg-3 vh-100 bg-dark position-relative" id="sideRoomsList">

                <!-- COLLAPSE ROOM LIST BUTTON -->

                <div class="position-absolute top-0 start-100 d-sm-none">
                    <button class="btn btn-lg btn-outline-secondary bg-dark " id="collapseRoomListBtn" onclick="collapseRoomList()"> X </button>
                </div>
                


                <!--CREATE ROOM FORM SECTION-->

                <div class="d-flex align-items-center shadow" style="height: 17.5%;">

                    <div class="w-100">
                        <form class="form-inline m-0" id="createRoomForm" novalidate="">
                
                            <label class="sr-only" for="inlineFormInputGroupUsername2">Create Room</label>
                            <div class="input-group mb-2 mr-sm-2">
                                <input type="text" class="form-control" name="createRoom" placeholder="Create a Room..." aria-label="Room name" aria-describedby="button-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="submit" id="createRoomBtn">+</button>
                                </div>
                            </div>
                            <div id="defaultFeedback" class="form-text">room name must be unique.</div>
                            <div id="createRoomFeedback" class="form-text d-none"></div>
        
                        </form>
                    </div>
                </div>

                <!-- HEADER FOR ROOM LIST-->

                <div style="height: 7.5%;">
                    <h4 class="p-2 m-0 text-center text-light shadow">All Rooms</h4>
                </div>


                <!-- ROOMS LIST SECTION-->

                <div class="overflow-auto" style="height: 75%;">

                    <ul id="roomList" class="pt-2 px-2 list-unstyled">
                        
                        <% rooms.forEach( (room,roomname) => { %>
                            <li class="p-2 text-center mb-4 neumorphic  text-primary">
                                <i class="fas fa-home text-secondary"></i> <a href="#" class="text-break" id="room<%=room.name%>" onclick="toggleRoomAction('<%= room.name %>')"><%=room.name%></a>    
                            </li>
                        <% }); %> 
                                
                    </ul>
                </div>
                    
            </div>
                

            <!-- ROOM VIEW SECTION -->
            <div class="col-12 col-sm-7 col-md-8 col-lg-9 bg-dark p-0">


                <!-- CLIENT'S ROOMS -->
                <section id="rooms">

                    
                </section>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>   
    <script src="/scripts/index.js"></script> 

</body>
</html>